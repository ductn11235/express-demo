extends ../layouts/common 

block content
    h1 Products

    .d-flex.align-items-center
        form.ml-auto(action="/products/search", method="GET", class="d-flex")
            input.form-control(type='search', placeholder='Search', aria-label='Search', name="q")
            button.btn.btn-outline-success.ml-2(type='submit') Search

    .row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-3
                    img.card-img-top(src=product.image)
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                        a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart
